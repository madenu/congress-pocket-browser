<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.cs5520.numad20su_congressmobile">

  <application
    android:allowBackup="false"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">
    <activity
      android:name=".controllers.MemberDetailsActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name=".controllers.CommitteeDetailsActivity"
      android:screenOrientation="portrait" />
    <activity
      android:name=".controllers.BillDetailsActivity"
      android:screenOrientation="portrait" />

    <activity
      android:label="@string/title_activity_settings"
      android:name=".controllers.SettingsActivity"
      android:screenOrientation="portrait"
      android:theme="@style/NoActionBar" />

    <activity
      android:name=".controllers.MainActivity"
      android:label="@string/app_name">

      <meta-data
        android:name="android.app.searchable"
        android:resource="@xml/searchable" />

      <intent-filter>
        <action android:name="android.intent.action.SEARCH" />
      </intent-filter>

      android:screenOrientation="portrait">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />

        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>

    </activity>

    <meta-data
      android:name="com.google.firebase.messaging.default_notification_color"
      android:resource="@color/colorAccent" />

    <meta-data
      android:name="com.google.android.wearable.standalone"
      android:value="true" />
  </application>
  <uses-feature
    android:name="android.hardware.camera"
    android:required="false" /> <!-- <uses-permission android:name="android.permission.MANAGE_DOCUMENTS" /> -->
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

  <uses-permission android:name="android.permission.INTERNET" />

  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>